

@using System.Web.UI.WebControls
@model GigHub.ViewModels.GigFormViewModel

@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Gigs"))
{
    <p class="alert alert-info">Wszystkie Pola są <strong >wymagane.</strong></p>
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <hr/>

    @Html.ValidationSummary("", new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Venue , string.Empty , new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" , placeholder = "np 1 Jan 2016" })
        @Html.ValidationMessageFor(m => m.Date, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "np 20:00" })
        @Html.ValidationMessageFor(m => m.Time, string.Empty, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Genre, string.Empty, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-lg btn-success" />
    </div>
}
@section scripts{
   @Scripts.Render("~/bundles/jqueryval")
    }



